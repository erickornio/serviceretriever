		<class>net.svcret.ejb.model.entity.PersUserServicePermission</class>
		<class>net.svcret.ejb.model.entity.PersUserServiceVersionPermission</class>
		<class>net.svcret.ejb.model.entity.PersUserServiceVersionMethodPermission</class>
